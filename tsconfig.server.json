{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "allowJs": false,
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}