{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./server",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "types": [
      "node",
      "express",
      "express-session",
      "passport"
    ],
    "paths": {
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"],
      "@db/*": ["./server/db/*"],
      "@auth/*": ["./server/auth/*"],
      "@routes/*": ["./server/routes/*"],
      "@middleware/*": ["./server/middleware/*"],
      "@utils/*": ["./shared/utils/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
